<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/dev_imageView"
        android:layout_width="103dp"
        android:layout_height="86dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_my_round" />

    <TextView
        android:id="@+id/id_device_page_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Device name"
        android:textSize="18sp"

        app:layout_constraintEnd_toEndOf="@+id/dev_imageView"
        app:layout_constraintStart_toStartOf="@+id/dev_imageView"
        app:layout_constraintTop_toBottomOf="@+id/dev_imageView"
        app:layout_constraintVertical_bias="0.285" />

    <TextView
        android:id="@+id/id_device_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="model"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/id_device_page_name"
        app:layout_constraintStart_toStartOf="@+id/id_device_page_name"
        app:layout_constraintTop_toBottomOf="@+id/id_device_page_name" />

    <FrameLayout
        android:id="@+id/childDeviceFrameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/id_device_model">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>